{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Frontend stack for a serverless application",

  "Parameters": {
    "AcmCertificateArn": {
      "Type": "String"
    },
    "DnsName": {
      "Type": "String"
    },
    "AltDnsName": {
      "Type": "String",
      "Default": ""
    },
    "HostedZoneName": {
      "Type": "String"
    },
    "Stage": {
      "Type": "String",
      "Default": ""
    },
    "ServiceName": {
      "Type": "String"
    },
    "BucketName": {
      "Type": "String"
    },
    "IndexDocument": {
      "Type": "String"
    },
    "ErrorDocument": {
      "Type": "String"
    }
  },

  "Conditions": {
    "CreateAltDnsName": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            { "Ref": "AltDnsName" },
            ""
          ]
        }
      ]
    },
    "UseStage": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            { "Ref": "Stage" },
            ""
          ]
        }
      ]
    },
    "ErrorDocEqualsIndex": {
      "Fn::Equals": [
        { "Ref": "IndexDocument" },
        { "Ref": "ErrorDocument" }
      ]
    }
  },

  "Resources": {
    "FrontendBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "BucketName"
        },
        "CorsConfiguration": {
          "CorsRules": [
            {
              "AllowedHeaders": [
                "Authorization",
                "Content-Type",
                "Origin",
                "Content-Disposition",
                "X-Forwarded-For"
              ],
              "AllowedMethods": ["GET", "HEAD"],
              "AllowedOrigins": ["*"]
            }
          ]
        },
        "VersioningConfiguration": {
          "Status": "Suspended"
        }
      }
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "FrontendBucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Principal": {
                "AWS": {
                  "Fn::Sub": "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity ${AccessIdentity}"
                }
              },
              "Effect": "Allow",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Sub": "arn:aws:s3:::${FrontendBucket}/*"
              }
            }
          ]
        }
      }
    },
    "Distribution": {
      "Type" : "AWS::CloudFront::Distribution",
      "Properties" : {
          "DistributionConfig" : {
            "Aliases": {
              "Fn::If": [
                "CreateAltDnsName",
                [
                  { "Ref": "DnsName" },
                  { "Ref": "AltDnsName" }
                ],
                [
                  { "Ref": "DnsName" }
                ]
              ]
            },
            "ViewerCertificate": {
              "SslSupportMethod": "sni-only",
              "AcmCertificateArn": {
                "Ref": "AcmCertificateArn"
              }
            },
            "DefaultRootObject": {
              "Ref": "IndexDocument"
            },
            "CustomErrorResponses": [
              {
                "ErrorCode": 404,
                "ErrorCachingMinTTL": 0,
                "ResponseCode": {
                  "Fn::If": [
                    "ErrorDocEqualsIndex",
                    200,
                    404
                  ]
                },
                "ResponsePagePath": { "Fn::Sub": "/${ErrorDocument}" }
              }
            ],
            "Enabled": true,
            "Origins": [
              {
                "DomainName": {
                  "Fn::Sub": "${FrontendBucket}.s3.amazonaws.com"
                },
                "Id": {
                  "Fn::Sub": "${AWS::StackName}"
                },
                "S3OriginConfig" : {
                    "OriginAccessIdentity": {
                      "Fn::Sub": "origin-access-identity/cloudfront/${AccessIdentity}"
                    }
                }
              }
            ],
            "DefaultCacheBehavior" : {
              "AllowedMethods" : [ "GET", "HEAD", "OPTIONS" ],  
              "TargetOriginId" : {
                "Fn::Sub": "${AWS::StackName}"
              },
              "ForwardedValues" : {
                "QueryString" : "false",
                "Cookies" : { "Forward" : "none" }
              },
              "ViewerProtocolPolicy" : "allow-all"
            }
          },
          "Tags" : [
            {
              "Key": "Name",
              "Value": {
                "Fn::If": [
                  "UseStage",
                  { "Fn::Sub": "${ServiceName}-${Stage}" },
                  { "Ref": "ServiceName" }
                ]
              }
            }
          ]
        }
    },
    "AccessIdentity": {
      "Type" : "AWS::CloudFront::CloudFrontOriginAccessIdentity",
      "Properties" : {
        "CloudFrontOriginAccessIdentityConfig": {
          "Comment": {
            "Fn::Sub": "Managed by ${AWS::StackName}"
          }
        }
      }
    },    
    "R53Record1": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "Comment": {
          "Fn::Sub": "Managed by ${AWS::StackName}"
        },
        "HostedZoneName": {
          "Fn::Sub": "${HostedZoneName}."
        },
        "AliasTarget": {
          "HostedZoneId": "Z2FDTNDATAQYW2",
          "EvaluateTargetHealth": false,
          "DNSName": {
            "Fn::GetAtt": ["Distribution", "DomainName"]
          }
        },
        "Name": { "Ref": "DnsName" },
        "Type": "A"
      }
    },
    "R53Record2": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "CreateAltDnsName",
      "Properties": {
        "Comment": {
          "Fn::Sub": "Managed by ${AWS::StackName}"
        },
        "HostedZoneName": {
          "Fn::Sub": "${HostedZoneName}."
        },
        "AliasTarget": {
          "HostedZoneId": "Z2FDTNDATAQYW2",
          "DNSName": {
            "Fn::GetAtt": ["Distribution", "DomainName"],
            "EvaluateTargetHealth": false
          }
        },
        "Name": { "Ref": "AltDnsName" },
        "Type": "CNAME"
      }
    }
  },

  "Outputs": {
    "FrontendUrls": {
      "Value": {
        "Fn::If": [
          "CreateAltDnsName",
          {
            "Fn::Join": [
              ",",
              [
                { "Fn::Sub": "https://${DnsName}" },
                { "Fn::Sub": "https://${AltDnsName}" }
              ]
            ]
          },
          { "Fn::Sub": "https://${DnsName}" }
        ]
      }
    }
  }
}